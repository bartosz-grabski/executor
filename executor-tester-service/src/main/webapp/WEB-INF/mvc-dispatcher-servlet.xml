<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix">
            <value>/WEB-INF/views/home/</value>
        </property>
        <property name="suffix">
            <value>.jsp</value>
        </property>
    </bean>
    
    <!-- Spring Remoting config -->
    
    <bean id="testerService" class="agh.bit.ideafactory.rmi.host.RMIHostService"></bean>
    
    <bean id="testerServiceExporter" class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="TesterService"/>
        <property name="service" ref="testerService"/>
        <property name="serviceInterface" value="agh.bit.ideafactory.rmi.common.TesterService"/>
        <property name="registryPort" value="1099"/>
        <property name="servicePort" value="9001"/>
    </bean>

</beans>